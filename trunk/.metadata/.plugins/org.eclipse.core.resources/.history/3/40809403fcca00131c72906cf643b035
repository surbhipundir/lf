                            <artifactId>alphacommon</artifactId>
                            <bundleFileName>AlphaCommon.jar</bundleFileName>
                        </jarModule>
                        <webModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>alphaweb</artifactId>
                            <bundleFileName>alphaweb.war</bundleFileName>
                            <context-root>/alpha</context-root>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

